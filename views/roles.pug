extends _bootstrap

block content
  h1= title

  div
    table.table.table-striped.table-hover
      thead
        tr: th Name
            th ID
            th Description
            th Client Role
            th Composite Role
            th Scope Param Required
      tbody
        each role, i in roles
          tr
            td
              p #{role.name}
            td
              p #{role.ID}
            td
              p #{role.description}
            td
              if role.clientRole
                +icon-success("ok")
              else
                +icon-danger("remove")
            td
                if role.compositeRole
                  +icon-success("ok")
                else
                  +icon-danger("remove")
            td
                if role.compositeRole
                  +icon-success("ok")
                else
                  +icon-danger("remove")